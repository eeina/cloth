# =============================================================================
# E-commerce Platform Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Do not commit .env.local to version control
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Elegant - Saudi Women's Fashion
NEXT_PUBLIC_APP_DESCRIPTION=Modern e-commerce platform for Saudi women's modest fashion

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development (SQLite - default for development)
DATABASE_URL="file:./dev.db"

# Production (MySQL/PostgreSQL - uncomment and configure for production)
# DATABASE_URL="mysql://username:password@localhost:3306/ecommerce_db"
# DATABASE_URL="postgresql://username:password@localhost:5432/ecommerce_db"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret for session management (generate a strong random string)
NEXTAUTH_SECRET="your-super-secret-jwt-key-here-minimum-32-characters"
NEXTAUTH_URL="http://localhost:3000"

# Bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# INTERNATIONALIZATION (i18n)
# =============================================================================
# Default language
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Supported locales
NEXT_PUBLIC_LOCALES=en,ar

# =============================================================================
# PAYMENT GATEWAY (Production Only)
# =============================================================================
# Stripe Configuration (uncomment for production)
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration (uncomment for production)
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# PAYPAL_MODE=sandbox # Change to 'live' for production

# =============================================================================
# EMAIL SERVICE
# =============================================================================
# SMTP Configuration for order notifications and password reset
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@elegant.sa

# =============================================================================
# CLOUD STORAGE (For product images)
# =============================================================================
# AWS S3 Configuration (uncomment for production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=me-south-1 # Middle East (Bahrain) region
# AWS_S3_BUCKET=your-bucket-name

# Cloudinary Configuration (alternative to AWS S3)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics (uncomment for production)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry Error Tracking (uncomment for production)
# SENTRY_DSN=https://your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# Social media links for the platform
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/elegant.sa
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/elegant.sa
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/elegant.sa
NEXT_PUBLIC_WHATSAPP_NUMBER=966500000000

# =============================================================================
# BUSINESS INFORMATION
# =============================================================================
# Company contact information
NEXT_PUBLIC_COMPANY_NAME=Elegant Fashion
NEXT_PUBLIC_COMPANY_EMAIL=info@elegant.sa
NEXT_PUBLIC_COMPANY_PHONE=+966 12 345 6789
NEXT_PUBLIC_COMPANY_ADDRESS="Riyadh, Saudi Arabia"

# =============================================================================
# CURRENCY & LOCALIZATION
# =============================================================================
# Currency configuration
NEXT_PUBLIC_CURRENCY=SAR
NEXT_PUBLIC_CURRENCY_SYMBOL=ï·¼
NEXT_PUBLIC_CURRENCY_POSITION=before # or 'after'

# Tax configuration (Saudi VAT is 15%)
NEXT_PUBLIC_TAX_RATE=0.15

# =============================================================================
# SHIPPING CONFIGURATION
# =============================================================================
# Default shipping settings
NEXT_PUBLIC_FREE_SHIPPING_THRESHOLD=500 # Free shipping over 500 SAR
NEXT_PUBLIC_DEFAULT_SHIPPING_FEE=25 # Default shipping fee in SAR

# =============================================================================
# ADMIN SETTINGS
# =============================================================================
# Admin credentials (for initial setup - change these in production)
ADMIN_EMAIL=admin@elegant.sa
ADMIN_PASSWORD=admin123

# =============================================================================
# API RATE LIMITING
# =============================================================================
# Rate limiting configuration
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=60000 # 1 minute in milliseconds

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis configuration (uncomment for production)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLIST=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_LIVE_CHAT=false
NEXT_PUBLIC_ENABLE_MULTI_CURRENCY=false

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug mode (set to false in production)
NEXT_PUBLIC_DEBUG_MODE=true

# Log level (error, warn, info, debug)
NEXT_PUBLIC_LOG_LEVEL=debug

# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================
# Socket.IO settings for real-time features
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_PATH=/api/socketio

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Google Maps API for store locator (uncomment if needed)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# reCAPTCHA for form protection (uncomment for production)
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
# RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Image optimization
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_FORMATS=webp,jpg,png

# Bundle analyzer (uncomment for development)
# ANALYZE=true

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Content Security Policy (CSP)
# NEXT_PUBLIC_CSP_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Use strong, randomly generated secrets in production
# 3. Regularly rotate your secrets and API keys
# 4. Keep your environment variables secure
# 5. Test all integrations in development before production
# =============================================================================